# Database connection
DATABASE_URL=postgres://artifact_harvester:artifact_harvester@localhost:5432/artifact_harvester

# Transport: 'http' (default) or 'stdio'
MCP_TRANSPORT=http

# HTTP settings (only used when MCP_TRANSPORT=http)
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=3333
MCP_HTTP_PATH=/mcp
MCP_HTTP_ALLOWED_HOSTS=
MCP_HTTP_ALLOWED_ORIGINS=
MCP_HTTP_DNS_PROTECTION=true

# Search/resource tuning
# Maximum artifacts returned per search call (capped at 50)
MCP_MAX_SEARCH_RESULTS=25
# Number of recent artifacts advertised for artifact:// resource listings/autocomplete
MCP_RESOURCE_SAMPLE_SIZE=20
